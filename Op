private async Task RegisterAutoLoginScriptAsync()
{
    if (_web.CoreWebView2 == null) return;
    if (string.IsNullOrWhiteSpace(_loginIdFromJson) || string.IsNullOrWhiteSpace(_loginPwFromJson)) return;

    var idJson = JsonSerializer.Serialize(_loginIdFromJson);
    var pwJson = JsonSerializer.Serialize(_loginPwFromJson);

    var js = $@"
(() => {{
  const ID = {idJson};
  const PW = {pwJson};

  function tryFill() {{
    const idEl = document.querySelector('input#USERID.input_txt, input#USERID, input[name=""USERID""]');
    const pwEl = document.querySelector('input#PASSWD.input_txt, input#PASSWD, input[name=""PASSWD""]');
    if (!idEl || !pwEl) return false;

    const setVal = Object.getOwnPropertyDescriptor(HTMLInputElement.prototype, 'value')?.set;

    function setInput(el, v) {{
      el.focus();
      if (setVal) setVal.call(el, v);
      else el.value = v;

      el.dispatchEvent(new Event('input',  {{ bubbles:true }}));
      el.dispatchEvent(new Event('change', {{ bubbles:true }}));
      el.blur();
    }}

    setInput(idEl, ID);
    setInput(pwEl, PW);

    return (idEl.value === ID) && (pwEl.value === PW);
  }}

  let n = 0;
  const t = setInterval(() => {{
    n++;
    if (tryFill() || n >= 40) clearInterval(t); // 최대 10초
  }}, 250);
}})();";

    await _web.CoreWebView2.AddScriptToExecuteOnDocumentCreatedAsync(js);
}
